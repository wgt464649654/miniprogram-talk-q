page {
  background: white;
}

.login {
  margin-top: 150px;
  margin-left: 43%;
}

.menu {
  margin-top: 25px;
  opacity: 0;
  animation: opacityShow 3s;
  animation-fill-mode: forwards;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.menu button {
  margin-bottom: 10px;
}

.pic-view {
  width: 35vw;
  height: 38vw;
  position: relative;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin: 10px 0;
}

.static {
  height: 90%;
  width: 90%;
  border-radius: 10px;
  box-shadow: 3px 3px 2px #888888;
}

.zhihu {
  position: absolute;
  width: 6480px;
  height: 120px;
  animation: dynamic 2.4s steps(54) infinite;
}
@keyframes dynamic {
  0% {
    left: 0;
  }
  100% {
    left: -6480px;
  }
}

.navigator-hover {
  background:white;
}

.game-name {
  margin-top: 5px;
}



