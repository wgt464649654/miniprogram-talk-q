.robot-line {
  position: absolute;
  height: 2px;
  width: 100%;
  background: #DC9A00;
  margin-top: 120px;
}

.user-line {
  position: absolute;
  height: 2px;
  width: 100%;
  background: #DC9A00;
  margin-top: 220px;
}

.run-avatar-div {
  width: 25px;
  height: 25px;
  position: absolute;
  top: -40px;
  left: 5%;
}

.robotr-run-20 {
  animation: robotRun 20s linear;
  animation-fill-mode: forwards;
}

.robotr-run-17 {
  animation: robotRun 17s linear;
  animation-fill-mode: forwards;
}

.robotr-run-14 {
  animation: robotRun 14s linear;
  animation-fill-mode: forwards;
}

.robotr-run-10 {
  animation: robotRun 10s linear;
  animation-fill-mode: forwards;
}

.robotr-run-8 {
  animation: robotRun 8s linear;
  animation-fill-mode: forwards;
}

.robotr-run-7 {
  animation: robotRun 7s linear;
  animation-fill-mode: forwards;
}

.robotr-run-6 {
  animation: robotRun 6s linear;
  animation-fill-mode: forwards;
}

@keyframes robotRun {
  0% {

  }
  100% {
    left: 90%;
  }
}

.run-pic {
  width: 30px;
  height: 30px;
  border-radius: 50%;
}

.avatar-assist {
  position: absolute;
  width: 30px;
  height: 30px;
  background: pink;
  border-top-left-radius: 50%;
  border-top-right-radius: 50%;
  border-bottom-left-radius: 50%;
  z-index: -1;
  transform: rotate(45deg);
}

.red-dot {
  width: 6px;
  height: 6px;
  background: red;
  border-radius: 50%;
  z-index: 9;
  position: absolute;
  left: 9px;
  margin-top: 8px;
}

.end-point {
  width: 6px;
  height: 6px;
  background: red;
  border-radius: 50%;
  position: absolute;
  left: calc(90% + 12px);
  top: -2px;
}

.run-button {
  width: 100px;
  height: 100px;
  line-height: 100px;
  text-align: center;
  border-radius: 50%;
  background: #3286F7;
  color: white;
  position: absolute;
  margin-top: 100vw;
  right: 20px;
  font-size: 3.5vw;
}

.run-button2 {
  width: 60px;
  height: 60px;
  line-height: 60px;
  text-align: center;
  border-radius: 50%;
  background: white;
  position: absolute;
  margin-top: 90vw;
  left: 20px;
  font-size: 3.5vw;
}

button::after {
  border: none;
}

.start-buttom {
  width: 100px;
  height: 100px;
  line-height: 100px;
  text-align: center;
  border-radius: 20%;
  background: #3286F7;
  color: white;
  position: absolute;
  margin-top: 100vw;
  left: 20px;
}

.result {
  position: fixed;
  z-index: 999;
  width: 100%;
  height: 100%;
  background: black;
}

.victory {
  width: 150px;
  height: 150px;
  margin: 100px calc(50% - 75px);
  border-radius: 50%;
}

.victory-text {
  color: red;
  animation: victoryText 2s infinite linear;
  animation-direction:alternate;
}

@keyframes victoryText {
  0% {

  }
  100% {
    margin-left: 50%;
  }
}

.level-select {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.level-select text {
  margin-left: 5px;
  margin-top: 2px;
  font-size: 3vw;
  opacity: 0.6;
}
.level-select button {
  font-size: 2.5vw;
}

.right {
  margin-right: 0;
}

.reward {
  width: 50px;
  height: 50px;
  line-height: 50px;
  text-align: center;
  border-radius: 50%;
  color: white;
  position: absolute;
  margin-top: 100vw;
  left: 20px;
}

.reward-pic {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  position: absolute;
}