.robot-line {
  position: absolute;
  height: 2px;
  width: 100%;
  background: #DC9A00;
  margin-top: 100px;
}

.user-line {
  position: absolute;
  height: 2px;
  width: 100%;
  background: #DC9A00;
  margin-top: 200px;
}

.run-avatar-div {
  width: 25px;
  height: 25px;
  position: absolute;
  top: -40px;
  left: 5%;
}

 .robotr-run-10 {
  animation: robotRun 10s linear;
  animation-fill-mode: forwards;
}
@keyframes robotRun {
  0% {

  }
  100% {
    left: 90%;
  }
}

.run-pic {
  width: 30px;
  height: 30px;
  border-radius: 50%;
}

.avatar-assist {
  position: absolute;
  width: 30px;
  height: 30px;
  background: blue;
  border-top-left-radius: 50%;
  border-top-right-radius: 50%;
  border-bottom-left-radius: 50%;
  z-index: -1;
  transform: rotate(45deg);
}

.red-dot {
  width: 6px;
  height: 6px;
  background: red;
  border-radius: 50%;
  z-index: 9;
  position: absolute;
  left: 9px;
  margin-top: 8px;
}

.end-point {
  width: 6px;
  height: 6px;
  background: red;
  border-radius: 50%;
  position: absolute;
  left: calc(90% + 12px);
  top: -2px;
}

.run-button {
  width: 60px;
  height: 60px;
  line-height: 60px;
  text-align: center;
  border-radius: 50%;
  background: white;
  position: absolute;
  margin-top: 90vw;
  right: 20px;
  font-size: 3.5vw;
}

.run-button2 {
  width: 60px;
  height: 60px;
  line-height: 60px;
  text-align: center;
  border-radius: 50%;
  background: white;
  position: absolute;
  margin-top: 90vw;
  left: 20px;
  font-size: 3.5vw;
}

button::after {
  border: none;
}

.start-buttom {
  width: 120px;
  height: 60px;
  line-height: 60px;
  text-align: center;
  border-radius: 50%;
  background: white;
  position: absolute;
  margin-top: 100vw;
  left: calc(50% - 60px);
}

.result {
  position: fixed;
  z-index: 999;
  width: 100%;
  height: 100%;
  background: black;
}

.victory {
  width: 150px;
  height: 150px;
  margin: 100px calc(50% - 75px);
  border-radius: 50%;
}

.victory-text {
  color: red;
  animation: victoryText 2s infinite linear;
  animation-direction:alternate;
}

@keyframes victoryText {
  0% {

  }
  100% {
    margin-left: 50%;
  }
}