<swiper class="screen-swiper round-dot" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500">
  <swiper-item wx:for="{{urls}}" wx:key>
    <image src="{{item}}" mode='aspectFill'></image>
  </swiper-item>
</swiper>
<view class="VerticalBox">
  <scroll-view class="VerticalNav nav" scroll-y scroll-with-animation scroll-top="{{VerticalNavTop}}" style="height:calc(100vh - 375rpx)">
    <view class="cu-item {{index==TabCur?'text-green cur':''}}" wx:for="{{list}}" wx:key bindtap='tabSelect' data-id="{{index}}">
      {{item.category}}
    </view>
  </scroll-view>
  <scroll-view class="VerticalMain" scroll-y scroll-with-animation style="height:calc(100vh - 375rpx)" scroll-into-view="main-{{MainCur}}" bindscroll="VerticalMain">
    <!-- 分类 -->
    <view class="padding-top padding-lr {{list.length === (index + 1) ? 'padding-bottom' : ''}}" wx:for="{{list}}" wx:key id="main-{{index}}">
      <view class='cu-bar solid-bottom bg-white'>
        <view class='action'>
          <text class='icon-title text-green'></text> {{item.category}} </view>
      </view>
      <view class="cu-list menu-avatar">
        <!-- 每类的条目 -->
        <view class="cu-item" wx:for="{{item.data}}" wx:key>
          <image src="{{'../../../images/' + (item.createUser === '敏' ? 'amin.jpg' : 'aguan.jpg')}}" class="cu-avatar round lg" bindtap='showImgs' data-imgs="{{item.imgs}}"></image>
          <view class="content">
            <view class="text-grey">
              <text class="text-cut">{{item.name}}</text>
              <view class='icon-pic text-yellow' wx:if="{{item.imgs&&item.imgs.length>0}}"></view>
              <!-- <view class="cu-tag round bg-orange sm">{{item.createUser}}</view> -->
            </view>
            <view class="text-gray text-sm flex">
              <text class="text-cut" wx:if="{{item.describe}}">
								<text class="icon-comment text-red margin-right-xs"></text>{{item.describe}}
              </text>
            </view>
          </view>
          <view class="action">
            <view class="text-grey text-sm">{{item.likeNums ? item.likeNums : ''}}</view>
            <view class="{{item.likeNums > 0 ? 'icon-likefill text-red' : 'icon-like'}}" data-id="{{item.id}}" bindtap="like" />
          </view>
        </view>
      </view>
    </view>
  </scroll-view>
</view>

<view class="cu-modal {{showDetailImgs?'show':''}}" bindtap="hideModal">
  <view class="cu-dialog" catchtap>
    <swiper class="screen-swiper round-dot" indicator-dots="true" circular="true">
      <swiper-item wx:for="{{detailImgs}}" wx:key>
        <image style="width:100%" src="{{item}}"  mode='aspectFill'></image>
      </swiper-item>
    </swiper>
  </view>
</view>
